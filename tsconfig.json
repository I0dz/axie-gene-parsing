{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2017.string",
      "dom"
    ],
    "module": "commonjs",
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true
  },
  "include": [ "./src/**/*", "./index.ts" ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "tests",
    "docs"
  ]
}

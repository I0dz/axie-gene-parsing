{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "es2017.string",
      "dom"
    ],
    "module": "commonjs",
    "rootDir": "src",
    "moduleResolution": "node",
    "outDir": "./dist",
    "incremental": true,
    "declaration": true,
    "strict": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types", "src/types"]
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "**/__tests__/*",
    "test",
    "docs"
  ]
}
